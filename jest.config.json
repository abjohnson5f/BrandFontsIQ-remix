{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/calculation-engine/src", "<rootDir>/calculation-engine/tests"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "collectCoverageFrom": [
    "calculation-engine/src/**/*.ts",
    "!calculation-engine/src/**/*.d.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  }
}
